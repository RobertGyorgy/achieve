---
const currentYear = new Date().getFullYear();
---

<footer
  class="bg-[#F2F2F2] relative overflow-hidden pointer-events-auto z-50"
  data-theme-color="#F2F2F2"
  id="main-footer"
>
  <!-- Outer padding — generous vertical breathing room -->
  <div class="px-4 md:px-8 pt-12 md:pt-20 pb-[calc(1.5rem+env(safe-area-inset-bottom))] md:pb-[calc(2.5rem+env(safe-area-inset-bottom))]">
    <div class="w-full max-w-[90rem] mx-auto relative z-10">

      <!-- Footer Card — tall, generous internal spacing -->
      <div
        class="footer-card bg-black text-white rounded-[2rem] md:rounded-[3rem] relative overflow-hidden shadow-2xl pointer-events-auto"
      >
        <!-- ===== TOP SECTION: Giant CTA ===== -->
        <div class="flex flex-col items-center justify-center text-center px-6 md:px-12 lg:px-20 pt-20 md:pt-32 lg:pt-40 pb-16 md:pb-24 lg:pb-32">
          
          <!-- Small label -->
          <span class="text-accent-orange text-xs md:text-sm font-bold uppercase tracking-[0.25em] mb-8 md:mb-12">
            Ready to start?
          </span>

          <!-- Giant headline -->
          <h2 class="font-nura text-[clamp(2.5rem,8vw,8rem)] font-black leading-[0.95] tracking-tight mb-10 md:mb-14">
            Let's build<br />
            <span class="text-accent-orange">something great.</span>
          </h2>

          <!-- CTA Buttons -->
          <div class="flex flex-wrap gap-4 justify-center">
            <a
              href="mailto:contact@achieve.ro"
              class="inline-flex items-center justify-center px-10 py-5 md:px-12 md:py-6 text-base md:text-lg rounded-full bg-accent-orange text-black font-bold uppercase tracking-wider hover:scale-105 transition-transform duration-300"
              style="font-family: 'Nura', serif !important;"
            >
              Get in Touch
            </a>
            <a
              href="/work"
              class="inline-flex items-center justify-center px-10 py-5 md:px-12 md:py-6 text-base md:text-lg rounded-full border-2 border-white/30 text-white font-bold uppercase tracking-wider hover:bg-white hover:text-black transition-all duration-300"
              style="font-family: 'Nura', serif !important;"
            >
              View Work
            </a>
          </div>
        </div>

        <!-- ===== DIVIDER ===== -->
        <div class="w-[calc(100%-3rem)] md:w-[calc(100%-6rem)] mx-auto h-px bg-white/10"></div>

        <!-- ===== BOTTOM SECTION: Nav + Info + Copyright ===== -->
        <div class="px-6 md:px-12 lg:px-20 pt-12 md:pt-16 pb-10 md:pb-14">

          <!-- Navigation Grid -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-10 md:gap-8 mb-16 md:mb-20">
            
            <!-- Menu -->
            <div class="space-y-5">
              <h3 class="text-accent-orange text-xs font-bold uppercase tracking-[0.2em]">Menu</h3>
              <ul class="space-y-3 text-base text-white/70">
                <li><a href="/" class="hover:text-white transition-colors duration-200">Home</a></li>
                <li><a href="/work" class="hover:text-white transition-colors duration-200">Work</a></li>
                <li><a href="/services" class="hover:text-white transition-colors duration-200">Services</a></li>
                <li><a href="/about" class="hover:text-white transition-colors duration-200">About</a></li>
              </ul>
            </div>

            <!-- Contact -->
            <div class="space-y-5">
              <h3 class="text-accent-orange text-xs font-bold uppercase tracking-[0.2em]">Contact</h3>
              <ul class="space-y-3 text-base text-white/70">
                <li>Brașov, România</li>
                <li>
                  <a href="mailto:contact@achieve.ro" class="hover:text-white transition-colors duration-200">contact@achieve.ro</a>
                </li>
              </ul>
            </div>

            <!-- Socials -->
            <div class="space-y-5">
              <h3 class="text-accent-orange text-xs font-bold uppercase tracking-[0.2em]">Social</h3>
              <ul class="space-y-3 text-base text-white/70">
                <li>
                  <a href="https://instagram.com/achieve" target="_blank" rel="noreferrer" class="hover:text-white transition-colors duration-200">Instagram</a>
                </li>
                <li>
                  <a href="https://linkedin.com" target="_blank" rel="noreferrer" class="hover:text-white transition-colors duration-200">LinkedIn</a>
                </li>
              </ul>
            </div>

            <!-- Legal -->
            <div class="space-y-5">
              <h3 class="text-accent-orange text-xs font-bold uppercase tracking-[0.2em]">Legal</h3>
              <ul class="space-y-3 text-base text-white/70">
                <li><a href="#" class="hover:text-white transition-colors duration-200">Privacy Policy</a></li>
                <li><a href="#" class="hover:text-white transition-colors duration-200">Terms & Conditions</a></li>
              </ul>
            </div>
          </div>

          <!-- ACHIEVE Wordmark — large centered brand statement -->
          <div class="text-center mb-10 md:mb-14">
            <span class="font-nura text-[clamp(3rem,12vw,10rem)] font-black leading-none tracking-tight text-white/[0.04] select-none uppercase">
              Achieve
            </span>
          </div>

          <!-- Copyright bar -->
          <div class="flex flex-col md:flex-row justify-between items-center gap-3 text-xs text-white/40">
            <p>&copy; {currentYear} Achieve Studio. All rights reserved.</p>
            <p>Designed & developed by Achieve</p>
          </div>

        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    will-change: opacity;
    overflow-x: hidden;
    overflow-y: visible;
  }
</style>
