---
const currentYear = new Date().getFullYear();
---

<footer
  class="bg-[#F2F2F2] pt-8 pb-[calc(1rem+env(safe-area-inset-bottom))] md:pt-16 md:pb-[calc(2rem+env(safe-area-inset-bottom))] px-4 md:px-8 relative overflow-hidden pointer-events-auto z-50"
  data-theme-color="#F2F2F2"
  id="main-footer"
>
  <div class="w-full max-w-[90rem] mx-auto relative z-10">
    <!-- Footer Card -->
    <div
      class="footer-card bg-black text-white rounded-[2.5rem] p-6 md:p-8 lg:p-10 relative overflow-hidden shadow-2xl pointer-events-auto"
    >
      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 relative z-10 items-center">
        <!-- Left Column: CTA & Brand -->
        <div class="lg:col-span-7 flex flex-col justify-center h-full text-center lg:text-left items-center lg:items-start">
          <h2 class="font-nura text-3xl md:text-5xl lg:text-6xl font-black leading-none mb-6">
            Let's build<br />
            <span class="text-accent-orange">something great</span> together.
          </h2>

          <!-- CTA Buttons -->
          <div class="flex flex-wrap gap-3 mt-6 md:mt-8 justify-center lg:justify-start">
            <a
              href="mailto:contact@achieve.ro"
              class="inline-flex items-center justify-center px-8 py-4 text-base rounded-full bg-accent-orange text-black font-bold uppercase tracking-wider hover:scale-105 transition-transform duration-300"
              style="font-family: 'Nura', serif !important;"
            >
              Get in Touch
            </a>
            <a
              href="/work"
              class="inline-flex items-center justify-center px-8 py-4 text-base rounded-full border-2 border-white text-white font-bold uppercase tracking-wider hover:bg-white hover:text-black transition-all duration-300"
              style="font-family: 'Nura', serif !important;"
            >
              View Work
            </a>
          </div>
        </div>

        <!-- Right Column: Navigation -->
        <div class="lg:col-span-5 flex flex-col items-center lg:items-end justify-between h-full mt-8 lg:mt-24">
          <div class="grid grid-cols-2 gap-6 lg:gap-12 text-center lg:text-right w-full lg:w-auto">
            <!-- Menu -->
            <div class="space-y-4">
              <h3 class="text-accent-orange text-xs font-bold uppercase tracking-widest">Menu</h3>
              <ul class="space-y-2 font-medium text-base text-white/80">
                <li><a href="/" class="hover:text-white transition-colors">Home</a></li>
                <li><a href="/work" class="hover:text-white transition-colors">Work</a></li>
                <li><a href="/services" class="hover:text-white transition-colors">Services</a></li>
                <li><a href="/about" class="hover:text-white transition-colors">About</a></li>
              </ul>
            </div>

            <!-- Contact -->
            <div class="space-y-4">
              <h3 class="text-accent-orange text-xs font-bold uppercase tracking-widest">Contact</h3>
              <ul class="space-y-2 text-white/70 text-sm">
                <li>Brașov, România</li>
                <li>
                  <a href="mailto:contact@achieve.ro" class="hover:text-white transition-colors">contact@achieve.ro</a>
                </li>
                <li>
                  <a href="https://instagram.com/achieve" target="_blank" rel="noreferrer" class="hover:text-white transition-colors">Instagram</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Divider -->
      <div class="w-full h-px bg-white/10 my-6 md:my-8"></div>

      <!-- Bottom Bar -->
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-white/60">
        <p>&copy; {currentYear} Achieve Studio. All rights reserved.</p>
        <div class="flex gap-6">
          <a href="#" class="hover:text-white transition-colors">Privacy Policy</a>
          <a href="#" class="hover:text-white transition-colors">Terms & Conditions</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    will-change: opacity;
    overflow-x: hidden;
    overflow-y: visible;
  }
</style>
