---
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const projectSlugs = ['digital-agency', 'ecommerce-platform'];
  return projectSlugs.map((slug) => ({
    params: { project: slug },
  }));
}

const projects: Record<
  string,
  {
    title: string;
    year: string;
    description: string;
    longDescription: string;
    challenge: string;
    solution: string;
    services: string[];
    results: string[];
    image: string;
    liveUrl?: string;
  }
> = {
  'digital-agency': {
    title: 'Digital Agency Website',
    year: '2024',
    description: 'Modern agency website with immersive design',
    longDescription:
      'A comprehensive redesign of a digital agency website, featuring cutting-edge animations, interactive elements, and a user-centric design approach.',
    challenge:
      "The original website felt outdated and failed to showcase the agency's creative capabilities. We needed to create an experience that immediately impressed visitors and demonstrated the quality of their work.",
    solution:
      'We designed and developed a completely new website featuring sophisticated GSAP animations, draggable elements, and a premium aesthetic. The site includes smooth page transitions, animated content reveals, and interactive hero sections.',
    services: [
      'Web Design',
      'Frontend Development',
      'Animation',
      'Brand Strategy',
    ],
    results: [
      'Increased user engagement by 150%',
      'Improved conversion rate by 45%',
      'Faster page load times (Lighthouse 95+)',
      'Mobile traffic increased by 200%',
    ],
    image: '/images/projects/digital-agency.jpg',
    liveUrl: 'https://example.com',
  },
  'ecommerce-platform': {
    title: 'E-Commerce Platform',
    year: '2024',
    description: 'Full-stack e-commerce solution',
    longDescription:
      'A complete e-commerce platform built from the ground up, featuring a modern frontend, robust backend, and comprehensive admin dashboard.',
    challenge:
      'The client needed a scalable e-commerce solution that could handle high traffic volumes while providing an excellent user experience for both customers and administrators.',
    solution:
      'We built a full-stack solution using modern technologies, implementing features like real-time inventory management, secure payment processing, advanced search and filtering, and detailed analytics.',
    services: [
      'Full Stack Development',
      'E-Commerce Setup',
      'Payment Integration',
      'Database Design',
    ],
    results: [
      'Processed $1M+ in first year',
      'Reduced cart abandonment by 30%',
      '99.9% uptime',
      'Sub-second page load times',
    ],
    image: '/images/projects/ecommerce.jpg',
    liveUrl: 'https://example.com',
  },
};

const { project: projectSlug } = Astro.params;
const projectData = projects[projectSlug!];

if (!projectData) {
  return Astro.redirect('/work/');
}
---

<Layout
  title={`${projectData.title} - Achieve Studio`}
  description={projectData.description}
  image={projectData.image}
>
  <main class="pt-20 bg-dark-bg">
    <!-- Hero Section -->
    <section class="relative py-16 sm:py-24 md:py-32 bg-dark-bg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-6 max-w-4xl">
          <span
            class="inline-block px-4 py-2 rounded-full bg-accent-orange/10 text-accent-orange text-sm font-semibold"
          >
            Case Study
          </span>
          <h1
            class="text-5xl sm:text-6xl md:text-7xl font-black font-nura text-white"
          >
            {projectData.title}
          </h1>
          <p class="text-xl sm:text-2xl text-white/70">
            {projectData.longDescription}
          </p>
          <div class="flex flex-wrap gap-4 pt-6">
            {
              projectData.services.map((service) => (
                <span class="px-4 py-2 bg-white/10 text-white/80 rounded-full text-sm">
                  {service}
                </span>
              ))
            }
          </div>
        </div>
      </div>
    </section>

    <!-- Project Image -->
    <section class="relative py-12 md:py-20 bg-dark-bg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
          class="rounded-3xl overflow-hidden h-96 md:h-[600px] bg-dark-bg-alt border border-white/10"
        >
          <div
            class="w-full h-full bg-gradient-to-br from-accent-orange/10 to-transparent flex items-center justify-center"
          >
            <div class="text-center text-white/40">
              <svg
                class="w-24 h-24 mx-auto mb-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
              <p>Project Image</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Challenge & Solution -->
    <section class="py-16 sm:py-20 md:py-32 bg-dark-bg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Challenge -->
          <div class="space-y-4">
            <h2 class="text-3xl md:text-4xl font-bold text-accent-orange">
              Challenge
            </h2>
            <p class="text-lg text-white/70 leading-relaxed">
              {projectData.challenge}
            </p>
          </div>

          <!-- Solution -->
          <div class="space-y-4">
            <h2 class="text-3xl md:text-4xl font-bold text-accent-orange">
              Solution
            </h2>
            <p class="text-lg text-white/70 leading-relaxed">
              {projectData.solution}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Results -->
    <section class="py-16 sm:py-20 md:py-32 bg-dark-bg-alt">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-12">Results</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {
            projectData.results.map((result) => (
              <div class="p-8 rounded-2xl bg-dark-bg border border-white/10 hover:border-accent-orange/50 transition-all duration-300">
                <div class="flex items-start gap-4">
                  <div class="w-8 h-8 rounded-full bg-accent-orange flex items-center justify-center flex-shrink-0 mt-1">
                    <svg
                      class="w-5 h-5 text-dark-bg"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="3"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                  </div>
                  <p class="text-lg text-white/80">{result}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative py-16 sm:py-20 md:py-32 bg-dark-bg">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center space-y-8">
        <h2
          class="text-4xl sm:text-5xl md:text-6xl font-black font-nura text-accent-orange"
        >
          Ready to Start Your Project?
        </h2>
        <p class="text-lg text-white/60">
          Let's create something extraordinary together.
        </p>
        <a
          href="#contact"
          class="inline-block px-8 py-4 rounded-full bg-accent-orange text-dark-bg font-medium hover:scale-105 transition-transform duration-300"
        >
          Get In Touch
        </a>
      </div>
    </section>

    <!-- Back to Work Link -->
    <section class="relative py-12 md:py-20 bg-dark-bg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <a
          href="/work"
          class="inline-flex items-center gap-2 text-accent-orange hover:gap-4 transition-all duration-300"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to All Projects
        </a>
      </div>
    </section>
  </main>
</Layout>
