---
import Layout from '../../layouts/Layout.astro';



const projects = [
  {
    id: 1,
    title: 'Digital Agency',
    slug: 'digital-agency',
    year: '2024',
    description: 'Modern agency website with immersive design and smooth animations',
    services: ['Web Design', 'Development', 'Animation'],
    tags: ['Web Design', 'Development'],
    image: '/images/projects/digital-agency.jpg',
  },
  {
    id: 2,
    title: 'E-Commerce Platform',
    slug: 'ecommerce-platform',
    year: '2024',
    description: 'Full-stack e-commerce solution with advanced features and analytics',
    services: ['E-Commerce', 'Backend Development', 'Database Design'],
    tags: ['E-Commerce', 'Development'],
    image: '/images/projects/ecommerce.jpg',
  },
  {
    id: 3,
    title: 'SaaS Dashboard',
    slug: 'saas-dashboard',
    year: '2023',
    description: 'Enterprise-grade dashboard with real-time analytics and reporting',
    services: ['UI/UX Design', 'Frontend Development', 'Backend API'],
    tags: ['SaaS', 'UI/UX Design'],
    image: '/images/projects/saas.jpg',
  },
  {
    id: 4,
    title: 'Mobile App Design',
    slug: 'mobile-app',
    year: '2023',
    description: 'Beautiful and intuitive mobile application design',
    services: ['Mobile Design', 'Prototyping', 'User Research'],
    tags: ['Mobile', 'UI/UX'],
    image: '/images/projects/mobile-app.jpg',
  },
  {
    id: 5,
    title: 'AI-Powered Chat Platform',
    slug: 'ai-chat-platform',
    year: '2023',
    description: 'Next-generation communication platform powered by AI',
    services: ['Full Stack Development', 'AI Integration', 'Cloud Architecture'],
    tags: ['AI', 'Development'],
    image: '/images/projects/ai-chat.jpg',
  },
  {
    id: 6,
    title: 'Brand Redesign',
    slug: 'brand-redesign',
    year: '2022',
    description: 'Complete brand identity redesign and marketing website',
    services: ['Brand Identity', 'Web Design', 'Content Strategy'],
    tags: ['Branding', 'Design'],
    image: '/images/projects/brand.jpg',
  },
];
---

<Layout
  title="Work - Achieve Studio"
  description="View our portfolio of completed projects and case studies."
>

  <main class="pt-20">
    <!-- Hero Section -->
    <section class="relative py-16 sm:py-24 md:py-32 bg-dark-bg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-6">
          <h1 class="text-5xl sm:text-6xl md:text-7xl font-black font-nura text-accent-orange">
            Our Work
          </h1>
          <p class="text-xl sm:text-2xl text-white/70 max-w-3xl">
            A collection of our latest projects showcasing design excellence and technical innovation.
          </p>
        </div>
      </div>
    </section>



    <!-- Projects Grid -->
    <section class="py-16 sm:py-20 md:py-32 bg-dark-bg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
          {projects.map((project) => (
            <a
              href={`/work/${project.slug}`}
              class="group relative overflow-hidden rounded-2xl aspect-video bg-dark-bg-alt hover:shadow-2xl transition-all duration-300"
            >
              <!-- Background Gradient -->
              <div class="absolute inset-0 bg-gradient-to-br from-accent-orange/10 to-transparent group-hover:from-accent-orange/20 transition-all duration-300">
              </div>

              <!-- Content Overlay -->
              <div class="absolute inset-0 flex flex-col justify-between p-6 md:p-8 z-10">
                <div>
                  <span class="text-xs uppercase tracking-wider text-accent-orange font-semibold">
                    {project.year}
                  </span>
                </div>

                <div class="space-y-3">
                  <div class="flex items-end justify-between">
                    <div>
                      <h3 class="text-2xl md:text-3xl font-bold text-white group-hover:translate-x-2 transition-transform duration-300">
                        {project.title}
                      </h3>
                      <p class="text-sm text-white/60 mt-2">{project.description}</p>
                    </div>
                    <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform group-hover:scale-110">
                      <svg
                        class="w-6 h-6 text-accent-orange"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M13 7l5 5m0 0l-5 5m5-5H6"
                        ></path>
                      </svg>
                    </div>
                  </div>

                  <!-- Tags -->
                  <div class="flex flex-wrap gap-2">
                    {project.services.map((service) => (
                      <span class="px-3 py-1 text-xs bg-white/10 text-white/70 rounded-full">
                        {service}
                      </span>
                    ))}
                  </div>
                </div>
              </div>

              <!-- Glow effect -->
              <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-2xl bg-gradient-to-t from-accent-orange/20 via-transparent to-transparent pointer-events-none">
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative py-16 sm:py-20 md:py-32 bg-dark-bg-alt">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center space-y-8">
        <h2 class="text-4xl sm:text-5xl md:text-6xl font-black font-nura text-accent-orange">
          Ready to Start Your Project?
        </h2>
        <p class="text-lg text-white/60">
          Let's create something extraordinary together.
        </p>
        <a
          href="#contact"
          class="inline-block px-8 py-4 rounded-full bg-accent-orange text-dark-bg font-medium hover:scale-105 transition-transform duration-300"
        >
          Get In Touch
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .group:hover {
    transform: translateY(-4px);
  }
</style>
