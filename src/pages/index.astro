---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import IntroTextSection from '../components/IntroTextSection.astro';

import FeaturedWork from '../components/FeaturedWork.astro';
import ServicesSection from '../components/ServicesSection.astro';
import OurProcessSection from '../components/OurProcessSection.astro';
import FAQSection from '../components/FAQSection.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Achieve Studio - Web Design & Development"
  description="Premium web design and development studio. We create beautiful, high-performance websites and applications for modern brands."
>
  <main class="w-full relative">
    <HeroSection />

    <div class="relative z-10 w-full flex flex-col">
      <IntroTextSection />
    </div>

    <!-- FeaturedWork â€” pinned with card transitions, then fades to reveal services -->
    <FeaturedWork />

    <!-- Services pulled up behind work with -margin; revealed when work fades -->
    <div class="relative w-full flex flex-col" style="z-index: 5; background-color: #000000; margin-top: -100vh; padding-top: 100vh;">
      <ServicesSection />

      <OurProcessSection />

      <FAQSection />

      <Footer />
    </div>
  </main>

  <style is:global>
    main {
      min-height: 100svh;
    }
  </style>
</Layout>
