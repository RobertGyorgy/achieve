---
import Navigation from '../components/NewNavigation.astro';

interface Props {
  title: string;
  description: string;
  keywords?: string;
  author?: string;
  image?: string;
  canonical?: string;
}

const {
  title = 'Achieve Studio',
  description = 'Premium web design and development studio',
  keywords = 'web design, web development, studio',
  author = 'Achieve Studio',
  image = '/og-images/default.jpg',
  canonical = Astro.url.href,
} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <!-- Initial theme-color matches preloader background so Safari bezels blend in -->
    <meta name="theme-color" content="#222831" id="theme-color-meta" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="mobile-web-app-capable" content="yes" />

    <script is:inline>
      var _lastThemeColor = '';
      var _themeElements = null;

      // Apply color to the meta tag (Safari address bar) AND html background (Safari tab bar area).
      function applyThemeColor(color) {
        if (!color || color === _lastThemeColor) return;
        _lastThemeColor = color;
        var meta = document.getElementById('theme-color-meta');
        if (meta) meta.setAttribute('content', color);
        document.documentElement.style.backgroundColor = color;
      }

      // Cache elements so we don't querySelectorAll on every frame
      function getThemeElements() {
        if (!_themeElements || !_themeElements.length) {
          _themeElements = document.querySelectorAll('[data-theme-color]');
        }
        return _themeElements;
      }

      // Find the section whose top edge has entered/passed the viewport top.
      // getBoundingClientRect() correctly reflects GSAP transform positions.
      function updateThemeColor() {
        var els = getThemeElements();
        var active = null;
        for (var i = 0; i < els.length; i++) {
          var rect = els[i].getBoundingClientRect();
          if (rect.top <= 1 && rect.bottom > 0) {
            active = els[i]; // last match = deepest section at the top
          }
        }
        if (active) applyThemeColor(active.getAttribute('data-theme-color'));
      }

      // rAF loop — runs every frame, works with both native scroll AND
      // GSAP ScrollSmoother (which moves content via CSS transform, not window.scrollY)
      function startRafLoop() {
        function tick() {
          updateThemeColor();
          requestAnimationFrame(tick);
        }
        requestAnimationFrame(tick);
      }

      // Watch preloader style — GSAP animates opacity inline.
      // Once opacity < 0.05, preloader is gone and hero is the active section.
      function watchPreloader() {
        var preloader = document.getElementById('preloader');
        if (!preloader) return;
        var obs = new MutationObserver(function() {
          var op = parseFloat(window.getComputedStyle(preloader).opacity);
          if (op < 0.05) {
            obs.disconnect();
          }
          // updateThemeColor runs every rAF frame so nothing extra needed here
        });
        obs.observe(preloader, { attributes: true, attributeFilter: ['style'] });
      }

      // Initial dark state matches preloader (#222831)
      applyThemeColor('#222831');

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', function() {
          watchPreloader();
          startRafLoop();
        });
      } else {
        watchPreloader();
        startRafLoop();
      }

      // On view transitions: reset cache so new page elements are picked up
      document.addEventListener('astro:page-load', function() {
        _lastThemeColor = '';
        _themeElements = null;
        watchPreloader();
      });
    </script>

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />

    <!-- Canonical -->
    <link rel="canonical" href={canonical} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter Card -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url.href} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Font Preload -->
    <link
      rel="preload"
      href="/Fonts/HKGrotesk-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/Fonts/HKGrotesk-Medium.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/Fonts/WOFF/Nura-Black.woff"
      as="font"
      type="font/woff"
      crossorigin
    />
    <link
      rel="preload"
      href="/Fonts/WOFF/Nura-Bold.woff"
      as="font"
      type="font/woff"
      crossorigin
    />

    <!-- Astro View Transitions -->
    <meta name="astro-view-transitions-enabled" content="true" />
  </head>
  <body class="bg-dark-bg text-white">
    <!-- Preloader - Outside smooth-wrapper to ensure visibility -->
    <div
      id="preloader"
      class="fixed inset-0 bg-[#222831] z-[9999] flex items-center justify-center placeholder-preloader"
      style="position: fixed; z-index: 9999; pointer-events: all; perspective: 1000px;"
    >
      <div id="preloader-text" class="flex">
        {
          ['A', 'C', 'H', 'I', 'E', 'V', 'E'].map((letter, i) => (
            <span
              class="preloader-letter text-[15vw] leading-none font-black font-nura text-[#ff4500] inline-block"
              data-index={i}
            >
              {letter}
            </span>
          ))
        }
      </div>
    </div>

    <!-- Navigation -->
    <Navigation />

    <div id="smooth-wrapper">
      <div id="smooth-content">
        <slot />
      </div>
    </div>

    <script src="../scripts/main.ts"></script>
  </body>
</html>

<style is:global>
  @import url('/src/styles/global.css');

  /* Preloader styles - ensure it's visible */
  #preloader {
    position: fixed;
    z-index: 9999;
    pointer-events: all;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    background-color: #222831;
  }

  /* Preloader letters - staggered entrance */
  .preloader-letter {
    opacity: 0;
    transform: translateY(30px) rotateX(-90deg);
    transform-origin: center bottom;
    font-family: 'Nura', serif;
    backface-visibility: hidden;
    -webkit-font-smoothing: antialiased;
    will-change: transform, opacity;
  }
</style>
